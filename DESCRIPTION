  data.table (>= 1.9.0),
  fastmatch, 
  hunspell,
  hutils (>= 0.8.0),
  magrittr, 
  rstudioapi,
  stats,
  tools,
  zoo
LazyData: TRUE
ByteCompile: true
RoxygenNote: 6.1.0
Encoding: UTF-8
Suggests:
  devtools,
  readr,
  stringi,
  testthat (>= 2.0.0),
  tinytex
